@using Prodavalnik.ViewModels
@using System.Text
@model Product
<div class="col mb-5">
   
                        <div class="card h-100">
                            <!-- Sale badge-->
                            <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Sale</div>
                            <!-- Product image-->
                            <img class="card-img-top" src="data:image/png;base64,@Convert.ToBase64String(Model.Img)" alt="..." />
                            <!-- Product details-->
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <!-- Product name-->
                                    <h5 class="fw-bolder">@Model.Name</h5>
                                    <!-- Product reviews-->
                                    <div class="d-flex justify-content-center small text-warning mb-2">
                                        <div class="bi-star-fill"></div>
                                        <div class="bi-star-fill"></div>
                                        <div class="bi-star-fill"></div>
                                        <div class="bi-star-fill"></div>
                                        <div class="bi-star-fill"></div>
                                    </div>
                                    <!-- Product price-->
                                    <span class="text-muted text-decoration-line-through">$@Model.Price</span>
                                    $18.00
                                </div>
                            </div>
                            <!-- Product actions-->
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                @if(User.Identity.IsAuthenticated){
                <div style="margin:5px;" class="text-center"><a class="btn btn-outline-dark mt-auto" href="/Cart/Add/@Model.Id">Add to cart</a></div>
               
                @if(@ViewBag.UserId==@Model.Owner){
                     <div class="text-center"><a class="btn btn-outline-dark mt-auto btn-danger alert-dark"  href="/Products/Edit/@Model.Id">Edit</a></div>
                }
               
                                }                          
                            </div>
                        </div>
                    </div>
                   
                   
