  <body>
    
   
    <div class="container tm-mt-big tm-mb-big">
      <div class="row">
        <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
          <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
            <div class="row">
              <div class="col-12">
                <h2 class="tm-block-title d-inline-block">Edit Product</h2>
              </div>
            </div>
            <div class="row tm-edit-product-row">
              <div class="col-xl-6 col-lg-6 col-md-12">
                <form method="post" enctype="multipart/form-data" action="/Products/Edit" class="tm-edit-product-form">
                  <div class="form-group mb-3">
                    <label for="name">Product Name
                    </label>
                    <input asp-for="Id" hidden/>
                    <input asp-for="Name" id="name" name="name"  type="text" class="form-control validate" required="">
                  </div>
                  <div class="form-group mb-3">
                    <label for="description">Description</label>
                    <textarea asp-for="Description" class="form-control validate" rows="3" required=""></input></textarea>
                  </div>
                  <div class="form-group mb-3">
                    <label for="category">Category</label>
                    <select asp-for="Category" class="custom-select tm-select-accounts" id="category">
                      <option selected="">Select category</option>
                      <option value="1">New Arrival</option>
                      <option value="2">Most Popular</option>
                      <option value="3">Trending</option>
                    </select>
                  </div>
                  <div class="row">
                      <div class="form-group mb-3 col-xs-12 col-sm-6">
                          <label for="expire_date">Price
                          </label>
                          <input asp-for="Price"  type="number"class="form-control validate hasDatepicker" data-large-mode="true">
                        </div>
                        <div class="form-group mb-3 col-xs-12 col-sm-6">
                          <div class="custom-file mt-3 mb-3">
                  <input asp-for="Img" id="fileInput" type="file" >
                </div>
                        </div>
                  </div>
                  <div class="col-12">
                 
                <button type="submit"  class="btn btn-primary btn-block text-uppercase">Edit Product Now</button>
              </div>
              </form ></div>
             
              
               
            
              
            
            </div>
          </div>
        </div>
      </div>
